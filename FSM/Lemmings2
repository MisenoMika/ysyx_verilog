module top_module(
    input clk,
    input areset,    // Freshly brainwashed Lemmings walk left.
    input bump_left,
    input bump_right,
    input ground,
    output walk_left,
    output walk_right,
    output aaah ); 

    parameter LEFT=2'b0, RIGHT=2'b01, FALL_L=2'b10, FALL_R=2'b11;
    reg [1:0]state, next_state;//, onGround;

    always @(*) begin
        // State transition logic
        next_state = state;
        if(!ground) begin
            if(state == LEFT)
                next_state = FALL_L;
            else if(state == RIGHT)
                next_state = FALL_R;
        end
        else begin
            if(state == FALL_L) begin
                next_state = LEFT;
            end
            else if(state == FALL_R)begin
                next_state = RIGHT;
            end
            else begin
                case (state)
                    LEFT: 
                        next_state = (bump_left)? RIGHT : LEFT;
                    RIGHT:
                        next_state = (bump_right)? LEFT : RIGHT;
                endcase
            end
        end
    end

    always @(posedge clk, posedge areset) begin
        // State flip-flops with asynchronous reset
        if(areset)begin
            state <= LEFT;
            //onGround <= 1;
            //aaah <= 0;
        end
        else begin
            state <= next_state;
            //onGround <= (ground)? 1 : 0;
            //aaah <= (ground)? 0 : 1;
        end
    end

    // Output logic
    // assign walk_left = (state == ...);
    // assign walk_right = (state == ...);
    assign walk_left  = (state == LEFT);
    assign walk_right = (state == RIGHT);
    assign aaah = (state == FALL_L || state == FALL_R);

endmodule
