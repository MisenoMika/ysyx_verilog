module top_module(
    input clk,
    input [7:0] in,
    input reset,    // Synchronous reset
    output done); //
    parameter BYTE1 = 2'b00, BYTE2 = 2'b01, BYTE3= 2'b10, DONE = 2'b11;
    reg [1:0] state, next_state;
    // State transition logic (combinational)
    always @(*)begin
        case(state)
            BYTE1: begin
                if(in[3])begin
                    next_state = BYTE2;
                end
                else begin
                    next_state = BYTE1;
                end
            end
            BYTE2: begin
                next_state = BYTE3;
            end
            BYTE3: begin
                next_state = DONE;
            end
            DONE: begin
               if(in[3])begin
                    next_state = BYTE2;
                end
                else begin
                    next_state = BYTE1;
                end
            end
            default: next_state = BYTE1;
        endcase
    end
    // State flip-flops (sequential)
    always@(posedge clk) begin
        if (reset) begin
            // Synchronous reset logic
            state <= BYTE1;
        end 
        else begin
            // State update logic
            state <= next_state;
        end
    end
    // Output logic
    assign done = (state == DONE);
endmodule
